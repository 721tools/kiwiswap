{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"pretty": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"target": "es2022",
		"outDir": "./dist",
		"baseUrl": "./src"
	},
	"include": [
		"src/**/*.ts",
		"src/dal/models/contracts.js"
	],
	"exclude": [
		"node_modules"
	]
}